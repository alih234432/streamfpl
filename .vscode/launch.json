        "version": "0.2.0",
        "configurations": [
            {
                "name": "Streamlit: Debug Current File",
                "type": "debugpy",
                "request": "launch",
                "module": "streamlit",
                "args": [
                    "run",
                    "${file}" // This will use the currently active file
                ],
                "console": "integratedTerminal",
                "justMyCode": true
            }
        ]
    }